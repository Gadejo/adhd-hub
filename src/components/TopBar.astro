---
export interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<nav class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <h1 class="text-xl font-bold text-gray-900 dark:text-white">{title}</h1>
        
        <!-- XP/Level Display -->
        <div class="ml-6 hidden md:flex items-center space-x-4">
          <div class="flex items-center space-x-2">
            <div class="text-sm font-medium text-gray-700 dark:text-gray-300">
              Level <span id="user-level" class="text-blue-600 dark:text-blue-400 font-bold">1</span>
            </div>
            
            <div class="flex items-center space-x-2">
              <div class="w-20 h-2 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
                <div 
                  id="xp-progress-bar" 
                  class="h-full bg-gradient-to-r from-blue-500 to-purple-600 transition-all duration-300"
                  style="width: 0%"
                ></div>
              </div>
              <div class="text-xs text-gray-600 dark:text-gray-400" id="xp-display">0 XP</div>
            </div>
            
            <div class="flex items-center space-x-1 text-sm">
              <span class="text-orange-500">ðŸ”¥</span>
              <span id="streak-display" class="text-gray-700 dark:text-gray-300 font-medium">0</span>
            </div>
          </div>
        </div>
        
        <nav class="ml-8 flex space-x-4">
          <a 
            href="/" 
            class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${
              currentPath === '/' 
                ? 'bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300' 
                : 'text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700'
            }`}
          >
            Dashboard
          </a>
          <a 
            href="/resources" 
            class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${
              currentPath === '/resources' 
                ? 'bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300' 
                : 'text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700'
            }`}
          >
            Resources
          </a>
          <a 
            href="/subjects" 
            class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${
              currentPath === '/subjects' 
                ? 'bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300' 
                : 'text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700'
            }`}
          >
            Subjects
          </a>
          <a 
            href="/goals" 
            class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${
              currentPath === '/goals' 
                ? 'bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300' 
                : 'text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700'
            }`}
          >
            Goals
          </a>
          <a 
            href="/stats" 
            class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${
              currentPath === '/stats' 
                ? 'bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300' 
                : 'text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700'
            }`}
          >
            Stats
          </a>
          <a 
            href="/settings" 
            class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${
              currentPath === '/settings' 
                ? 'bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300' 
                : 'text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700'
            }`}
          >
            Settings
          </a>
          <a 
            href="/test-xp" 
            class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${
              currentPath === '/test-xp' 
                ? 'bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300' 
                : 'text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700'
            }`}
          >
            XP Test
          </a>
        </nav>
      </div>
      
      <div class="flex items-center space-x-4">
        <button 
          id="export-btn"
          class="px-3 py-2 text-sm font-medium text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md transition-colors"
        >
          Export
        </button>
        
        <label class="relative inline-flex items-center cursor-pointer">
          <input type="file" id="import-input" accept=".json" class="sr-only">
          <span class="px-3 py-2 text-sm font-medium text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md transition-colors">
            Import
          </span>
        </label>
        
        <button 
          id="theme-toggle"
          class="p-2 rounded-md text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
          aria-label="Toggle theme"
        >
          <svg class="w-5 h-5 dark:hidden" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
          </svg>
          <svg class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</nav>

<script>
  import { exportJSON, importJSON, updateSettings, getAll } from '../lib/storage.js';
  import { calculateLevel, getLevelMessage } from '../lib/xp.js';
  
  // Load and display XP/Level information
  function updateXPDisplay() {
    const data = getAll();
    const levelInfo = calculateLevel(data.settings.xp);
    
    // Update level display
    const levelElement = document.getElementById('user-level');
    if (levelElement) {
      levelElement.textContent = levelInfo.level.toString();
      levelElement.title = getLevelMessage(levelInfo.level);
    }
    
    // Update XP display
    const xpElement = document.getElementById('xp-display');
    if (xpElement) {
      xpElement.textContent = `${data.settings.xp} XP`;
      xpElement.title = `Next level: ${levelInfo.xpForNextLevel} XP`;
    }
    
    // Update progress bar
    const progressBar = document.getElementById('xp-progress-bar');
    if (progressBar) {
      const progressPercent = Math.round(levelInfo.progressToNext * 100);
      progressBar.style.width = `${progressPercent}%`;
      progressBar.title = `${progressPercent}% to level ${levelInfo.level + 1}`;
    }
    
    // Update streak display
    const streakElement = document.getElementById('streak-display');
    if (streakElement) {
      streakElement.textContent = data.settings.streak.toString();
      streakElement.title = `Current streak: ${data.settings.streak} days\nLongest streak: ${data.settings.longestStreak} days`;
    }
  }
  
  // Update XP display on page load
  updateXPDisplay();
  
  // Listen for XP updates
  window.addEventListener('xp-updated', updateXPDisplay);
  window.addEventListener('session-logged', updateXPDisplay);
  
  // Theme toggle
  document.getElementById('theme-toggle')?.addEventListener('click', () => {
    const html = document.documentElement;
    const isDark = html.classList.contains('dark');
    
    if (isDark) {
      html.classList.remove('dark');
      updateSettings({ theme: 'light' });
    } else {
      html.classList.add('dark');
      updateSettings({ theme: 'dark' });
    }
  });
  
  // Export functionality
  document.getElementById('export-btn')?.addEventListener('click', () => {
    try {
      const jsonData = exportJSON();
      const blob = new Blob([jsonData], { type: 'application/json' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = `adhd-hub-backup-${new Date().toISOString().split('T')[0]}.json`;
      document.body.appendChild(a);
      a.click();
      document.body.removeChild(a);
      URL.revokeObjectURL(url);
    } catch (error) {
      alert('Failed to export data');
      console.error(error);
    }
  });
  
  // Import functionality
  document.getElementById('import-input')?.addEventListener('change', (e) => {
    const file = e.target.files?.[0];
    if (!file) return;
    
    const reader = new FileReader();
    reader.onload = (event) => {
      try {
        const jsonString = event.target?.result as string;
        importJSON(jsonString);
        alert('Data imported successfully! Page will reload.');
        window.location.reload();
      } catch (error) {
        alert('Failed to import data. Please check the file format.');
        console.error(error);
      }
    };
    reader.readAsText(file);
  });
</script>